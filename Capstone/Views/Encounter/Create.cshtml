@model Capstone.Models.ViewModels.EncounterViewModel



<h1>Create</h1>

<h4>Encounter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Encounter.Name" class="control-label"></label>
                <input asp-for="Encounter.Name" class="form-control" />
                <span asp-validation-for="Encounter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterId" class="control-label"></label>
                <select multiple="multiple" asp-for="CharacterIds" class="form-control"   asp-items="@Model.CharacterOptions">
                <option value="" hidden>Select options</option>
                </select>
                <span asp-validation-for="CharacterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonsterId" class="control-label"></label>
                <select multiple="multiple" asp-for="MonsterIds" class="form-control " asp-items="@Model.MonsterOptions">
                <option value="" hidden></option>
                </select>
                <span asp-validation-for="MonsterId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Encounter.Description" class="control-label"></label>
                <input asp-for="Encounter.Description" class="form-control" />
                <span asp-validation-for="Encounter.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Encounter.Location" class="control-label"></label>
                <input asp-for="Encounter.Location" class="form-control" />
                <span asp-validation-for="Encounter.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
