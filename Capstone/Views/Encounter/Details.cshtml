@model Capstone.Models.Encounter

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="col-lg-12">
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)

        </th>
        <th>
            Characters
        </th>
        <th>
            Monsters
        </th>

    </tr>
    
    <tbody>
        
        
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
                <td>@Html.DisplayFor(model => model.Location)</td>
                <td>
                    <ul>
                        @foreach (var characterId in Model.CharacterEncounters)
                        {
                            <li>
                                @characterId.Character.CharacterName
                            <ul>
                                <li>HP: @characterId.Character.CurrentHp</li>
                                <li>AC: @characterId.Character.ArmorClass</li>
                                <li>STR: @characterId.Character.Strength</li>
                                <li>DEX: @characterId.Character.Dexterity</li>
                                <li>CON: @characterId.Character.Constitution</li>
                                <li>INT: @characterId.Character.Intelligence</li>
                                <li>WIS: @characterId.Character.Wisdom</li>
                                <li>CHA: @characterId.Character.Charisma</li>
                            </ul>
                        </li>
                    }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var monsterId in Model.MonsterEncounters)
                        {
                            <li>
                                @monsterId.Monster.Name
                            <ul>
                                <li>@monsterId.Monster.HitPoints</li>
                                <li>@monsterId.Monster.ArmorClass</li>
                                <li>@monsterId.Monster.Strength</li>
                                <li>@monsterId.Monster.Dexterity</li>
                                <li>@monsterId.Monster.Constitution</li>
                                <li>@monsterId.Monster.Intelligence</li>
                                <li>@monsterId.Monster.Wisdom</li>
                                <li>@monsterId.Monster.Charisma</li>
                            </ul>
                        </li>
                    }
                    </ul>
                </td>

            </tr>
        
    </tbody>
</table>
    </div>


