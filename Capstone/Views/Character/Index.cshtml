@model IEnumerable<Capstone.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                Character Name
            </th>
            <th>
               Player Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
               EXP
            </th>
            <th>
               Max HP
            </th>
            <th>
                Current HP
            </th>
            <th>
              Hit Dice
            </th>
            <th>
               AC
            </th>
            <th>
               STR
            </th>
            <th>
               DEX
            </th>
            <th>
               CON
            </th>
            <th>
               INT
            </th>
            <th>
                WIS
            </th>
            <th>
                CHA
            </th>
            <th>
               Prof. Bonus
            </th>
            
            
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HitDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmorClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dexterity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Constitution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intelligence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wisdom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Charisma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProficiencyBounus)
            </td>
           
          
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
